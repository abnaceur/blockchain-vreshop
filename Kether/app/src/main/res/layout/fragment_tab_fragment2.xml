<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabFragment2">

    <!-- TODO: Update blank fragment layout -->
    _

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/frag2_takePicture"
            android:drawableLeft="@drawable/icons8_compact_camera_32"
            android:drawableStart="@drawable/icons8_compact_camera_32"
            android:onClick="frag2_TakePicture"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#353839"
            android:text="Take Picture"
            android:textColor="#EEE" />

        <ImageView
            android:id="@+id/frag2_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/frag2_takePicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp" />

        <EditText
            android:id="@+id/frag2_Description"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag2_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Product Description"
            android:textColorHint="#EEE" />

        <EditText
            android:id="@+id/frag2_Price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag2_Description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Product Price"
            android:inputType="number"
            android:textColorHint="#EEE" />

        <TextView
            android:id="@+id/frag2_ok"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag2_Price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Sell Product?"
            android:textAlignment="center"
            android:textColor="#EEE"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/frag2_ethContract"
            android:layout_alignStart="@id/frag2_ok"
            android:layout_alignLeft="@id/frag2_ok"
            android:layout_below="@id/frag2_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/frag2_ethDescription"
            android:textColor="#EEE"
            android:text="Generate Etherum contract"
            android:layout_marginTop="10dp"
            android:layout_alignBaseline="@id/frag2_ethContract"
            android:layout_below="@+id/frag2_ok"
            android:layout_toRightOf="@id/frag2_ethContract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/frag2_sellProduct"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/frag2_ethContract"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#353839"
            android:onClick="frag2_Sell"
            android:text="Sell!"
            android:textColor="#EEE" />

        <ImageView
            android:id="@+id/frag2_qrcode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/frag2_sellProduct"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp" />

    </RelativeLayout>


</ScrollView>

